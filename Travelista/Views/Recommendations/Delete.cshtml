@model Travelista.Models.Recommendation

@{
    ViewData["Title"] = "Delete";
}
@{
    var path = Model.Image_Url + ".jfif";
}


<div class="container">
    <h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
    <h4>City</h4>
    <hr />
     @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
         {
       <p class="title alert alert-danger">@ViewBag.ErrorMessage</p>
        }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image_Url)
        </dt>
        <dd class = "col-sm-10">
           
            <img src="~/Image/@path"  width="60" height="40"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-dark text-light">Back to List</a>
    </form>
</div>

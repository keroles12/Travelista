@model Travelista.Models.Recommendation

@{
    ViewData["Title"] = "Create";
}

<div class="container" >
    <h1>Create</h1>

<h4>City</h4>
  @if (!string.IsNullOrEmpty( ViewBag.image))
         {
       <p class="title alert alert-danger">@ViewBag.image</p>
        }
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City_Id" class="control-label"></label>
                <select asp-for="City_Id" class ="form-control" asp-items="ViewBag.Country_Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Image_Url" class="control-label"></label>
                <input type="file"  asp-for="Image_Url" accept="image/*" value="" class="form-control" />
                <span asp-validation-for="Image_Url" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn  text-light " style="background-color:#00357D" />
                 <a asp-action="Index" class="btn btn-dark text-light" >Back to List</a>
            </div>
        </form>
    </div>
</div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

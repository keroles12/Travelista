@model Hotel
@{
	ViewData["Title"] = "Details";
}


<main class="container mt-3">
	
		
		<div class=" bg-light bg-opacity-10 py-1 px-3 rounded text-success mb-4">
			<span class="">
				<svg height="17px" width="17px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
					<path style="fill:#198754;" d="M21.22 3.37a.75.75 0 0 0-.6-.59c-4.85-.9-10.6.55-13.37 3.36S3.1 14.39 3.88 19.05L2 21a.75.75 0 0 0 0 1 .74.74 0 0 0 .53.22A.71.71 0 0 0 3 22l2-1.9a16.94 16.94 0 0 0 2.76.23c4.09 0 8.19-1.33 10.35-3.52 2.71-2.81 4.07-8.59 3.11-13.44zM17 15.75c-2.11 2.14-6.59 3.36-10.7 3L16.59 8.47a.75.75 0 0 0 0 -1.06.77.77 0 0 0-1.07 0l-10.3 10.3c-.33-3.91.91-8.31 3.1-10.52s7.29-3.63 11.52-3c.67 4.22-.54 9.22-2.84 11.56z"></path>
				</svg>
			</span>
			 <span class=" text-primary fw-bold col-3">@Model.Name</span>
			 <span class="text-primary ms-5"><span class=" fw-bold">Address :</span>@Model.Address</span>
			 <span  class="text-primary text-decoration-none ms-5"><span class=" fw-bold">City:</span> @Model.city.Name</span>
		     <span  class="text-primary text-decoration-none ms-5 "><span class=" fw-bold">WhatsApp :</span> @Model.PhoneNumber</span>
		     <a  asp-action="BestPlace" asp-route-id="@Model.City_Id"  class="btn btn-primary text-decoration-none ms-5 "><span>best places in @Model.city.Name</span></a>

		 </div>
	
	
	
	
	
	
 @if(Model.images!=null)
	{
		<partial name="_ImagePartial"  model="@Model.images"></partial>
	}
	else{

	}
	<div class="alert alert-primary" role="alert">
     <h4 class="alert-heading">Description</h4>
      <p>@Model.Description</p>
  
</div>
@if(ViewBag.count>0)
	{
			<partial name="_ReviewPartail"  model="@Model.reviews"></partial>

	}

	else
	{
		
	}

	
	
	      <partial name="_RoomPartial"  model="@Model.Rooms"></partial>

		 
	@if (User.Identity.IsAuthenticated)
	{
		
			  <div class="container m-auto mt-5">
		<div class="wrapper">
			<form class="text-center form1 mb-4" asp-action="CreateComment" asp-controller="Details"  method="post">
				<input type="hidden" name="id" value="@Model.ID" />
				<div class="field">
					<textarea id="comment" rows="4" name="comment" lang="en" required  placeholder="Your Comment..."></textarea>
					<label for="msg">Write here</label>
				</div>
				<div id="comment-error" class="error text-danger"></div>
				<input  class="button comment" type="submit" value="Add Comment" />
			</form>
		</div>
	</div>
	}

		  
	

	
</main>



	


@model IEnumerable<Travelista.Models.City>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="background-color:#00357D">Create New</a>
</p>
@if (!string.IsNullOrEmpty(ViewBag.CreateMessage))
         {
       <p class="title alert alert-success">@ViewBag.CreateMessage</p>
        }
@if (!string.IsNullOrEmpty(ViewBag.EditMessage))
         {
       <p class="title alert alert-success">@ViewBag.EditMessage</p>
        }
<table class="table table-hover">
    <thead class=" text-light" style="background-color:#00357D" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image_Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Population)
            </td>
            <td>
               <img src="~/Image/@item.Image_Url" width="60"  height="30"/>
            </td>
            <td class="d-flex justify-content-end">
                <partial name="_ButtonPartial" model="@item.ID"  />
              
            </td>
        </tr>
}
    </tbody>
</table>
</div>

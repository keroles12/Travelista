@model Travelista.Models.Images
@{
    var urlimage = ViewBag.ImageName;
}

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <h1>Edit</h1>

<h4>Images</h4>
 @if (!string.IsNullOrEmpty( ViewBag.image))
         {
       <p class="title alert alert-danger">@ViewBag.image</p>
        }
<hr />
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Hotel_Id" class="control-label"></label>
                <select asp-for="Hotel_Id" class="form-control" asp-items="ViewBag.Hotel_Id"></select>
                <span asp-validation-for="Hotel_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image1" class="control-label"></label>
                <input asp-for="Image1" type="file" accept="image/*" name="f1" class="form-control"   />
                <span asp-validation-for="Image1" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Image2" class="control-label"></label>
                <input asp-for="Image2" type="file" accept="image/*" name="f2" class="form-control" />
                <span asp-validation-for="Image2" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Image3" class="control-label"></label>
                <input asp-for="Image3" type="file" accept="image/*" name="f3" class="form-control" />
                <span asp-validation-for="Image3" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Image4" class="control-label"></label>
                <input asp-for="Image4" type="file" accept="image/*" name="f4" class="form-control" />
                <span asp-validation-for="Image4" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Image5" class="control-label"></label>
                <input asp-for="Image5" type="file" accept="image/*" name="f5" class="form-control"  />
                <span asp-validation-for="Image5" class="text-danger"></span>
            </div>

             
            <div class="form-group mt-3">
                 <input type="submit" value="Save" class="btn btn-primary " />
                 <a asp-action="Index" class="btn btn-dark fw-bold "  >Back to list</a>
           
            </div>
        </form>
    </div>
</div>


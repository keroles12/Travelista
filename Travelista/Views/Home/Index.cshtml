@model IEnumerable<Travelista.Models.Country>
@{
	ViewData["Title"] = "Home Page";
}

<div class="head">
	<div class="container text-white text-head">
		<h1>Find your next stay</h1>
		<h4>Search low prices on hotels, homes and much more...</h4>
	</div>
</div>
<main class="container">
	<div class="m-auto text-center">
		<a class="b-Search" asp-action="Search" asp-controller="Search">Go to Search Hotal</a>
	</div>
	@* Offers *@
	<div class="container pt-5">
		<h4 class="fw-bold">Offers</h4>
		<p>Promotions, deals, and special offers for you</p>
		<div class="row justify-content-around">
			<div class="col-lg-5  row border p-0">
				<div class="col-8 pt-4 ">
					<p class="fw-bold">Take your longest vacation yet</p>
					<p>Browse properties offering long-term stays, many at reduced monthly rates.</p>
					<a href="#" class="btn btn-primary pb-2">Find a stay</a>
				</div>
				<div class="col-4 right-div">
				</div>
			</div>
			<div class="col-lg-5 mt-3 mt-lg-0 border text-white left-div">
				<div class="pt-4 w-75">
					<p class="fw-bold">The great getaway, your way</p>
					<p>
						Save at least 15% on stays worldwide, from relaxing retreats to off-the-grid adventures
					</p>
					<a href="#" class="btn btn-primary">Find Getaway Deals</a>
				</div>
			</div>
		</div>
	</div>
	<br />
	<br />
	@* Trending destinations *@
	<div class="pt-5">
		<h4 class="h4h">Trending destinations</h4>
		<p class="m-0">Most popular choices for travelers from Egypt</p>
		<div class="slide d-lg-block d-none" style="margin-top:-6%">
			<div class="containe">
				<div class="carouse">
					<div class="carousel__face"><span>Cairo</span></div>
					<div class="carousel__face"><span>Hurghada</span></div>
					<div class="carousel__face"><span>Sharm El Sheikh</span></div>
					<div class="carousel__face"><span>Alexandria</span></div>
					<div class="carousel__face"><span>Ain Sokhna</span></div>
					<div class="carousel__face"><span>Luxor</span></div>
					<div class="carousel__face"><span>North Coast</span></div>
					<div class="carousel__face"><span>Giza</span></div>
					<div class="carousel__face"><span>Aswan</span></div>
				</div>
			</div>
		</div>

		@* small screan *@
		<div id="carouselExampleControlsNoTouching" class="d-lg-none h-50 carousel carousel-primary slide" data-bs-touch="false">
			<div class="carousel-inner" style="min-height:70vh;">
				<div class="carousel-item active">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://www.holidify.com/images/cmsuploads/compressed/1024px-Egypt-2A-010-Cairo22173490502_20221108225308.jpg" alt="First slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Cairo</h5>
					</div>
				</div>
				<div class="carousel-item">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://cf.bstatic.com/xdata/images/city/600x600/644338.jpg?k=51ec9b834df182428a266d5084a944dca58573a3aad1a2b5993989d3438539fe&o=" alt="Second slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Hurghada</h5>
					</div>
				</div>
				<div class="carousel-item">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://cf.bstatic.com/xdata/images/city/600x600/644630.jpg?k=700ac1d32a3bab480b14db2cba3050abe5b5bce062911dc4f5b3fdc15d81f007&o=" alt="Third slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Sharm El Sheikh</h5>
					</div>
				</div>
				<div class="carousel-item">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://cf.bstatic.com/xdata/images/city/600x600/644356.jpg?k=d6ce4466d6df2568018de1e5de202e1bffed10b6104eebf0681b716fcddc167f&o=" alt="Third slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Alexandria</h5>
					</div>
				</div>
				<div class="carousel-item">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://cf.bstatic.com/xdata/images/city/600x600/691353.jpg?k=878cf98fab1232e95def135008bf96a8b3576a24c2aa0d9d6cb9ed828eefefc8&o=" alt="Third slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Ain Sokhna</h5>
					</div>
				</div>
				<div class="carousel-item">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://cnn-arabic-images.cnn.io/cloudinary/image/upload/w_1100,h_619,c_fill,q_auto,g_center/cnnarabic/2020/03/01/images/148207.jpg" alt="Third slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Luxor</h5>
					</div>
				</div>
				<div class="carousel-item">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://static.wixstatic.com/media/5eff48_8f12ae4b0c704b33a2422383e2c3bfd1~mv2_d_4000_2000_s_2.jpg/v1/fill/w_640,h_320,al_c,q_80,usm_0.66_1.00_0.01,enc_auto/5eff48_8f12ae4b0c704b33a2422383e2c3bfd1~mv2_d_4000_2000_s_2.jpg" alt="Third slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Giza</h5>
					</div>
				</div>
				<div class="carousel-item">
					<img class="d-block m-auto" style="height: 80vh; width: 80vw;" src="https://traveltalez.com/blog/wp-content/uploads/2020/06/Luxor-768x575.jpg" alt="Third slide">
					<div class="carousel-caption d-none d-md-block rounded fw-bolder bg-div">
						<h5>Aswan</h5>
					</div>
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>

		
	</div>
	@* Explore Egypt *@
    <div class="container " style="margin-top:70px;" >

		<h1 class="text-center ">Country</h1>
	<div class="row ">
		
		@foreach (var item in Model)
		{
			
				<div class="card col-4" style="width: 18rem;height:350px">
			  <img src="~/Image/@item.Image_Url" class="card-img-top" height="100" alt="...">
			  <div class="card-body">
				<a asp-action="Search" asp-controller="Search" class="text-decoration-none"><h5 class="card-title">@item.Name</h5></a>
				<p class="card-text">@item.Name is not only a country of antiquity, but also of magnificent landscapes offering cities and oases, </p>
  
			  </div>
			</div>
			
		}
	   
	</div>

	</div>
	
	@* Quick and easy trip planner *@
<h4 class="text-center">The best City in Egypt</h4>
					
	<div class="container">
		<div class="row">
			<div class="MultiCarousel" data-items="1,3,5,5" data-slide="1" id="MultiCarousel" data-interval="1000">
				<div class="MultiCarousel-inner">
					
					@foreach (var item in ViewBag.city)
					
					{
						
						
								<div class="item" style=" box-shadow: 0 8px 14px 0px rgba(0,0,0,0.2);">
									<div class="pad15 bg-white">
										<a asp-action="Search" asp-controller="Search" class="text-black text-decoration-none">
											<img src="~/Image/@item.Image_Url" class="w-100" />
											<h5>@item.Name</h5>
											<p>180 KM From Cairo</p>
										</a>
									</div>
								</div>

							

						
						

					}
				</div>
				<button class="btn btn-primary mb-5 leftLst"><</button>
				<button class="btn btn-primary mb-5 rightLst">></button>
			</div>
		</div>
	</div>
	
	
	<div class="circles-div row m-5 border position-relative">
		<div class="circle-ylow col-2"></div>
		<div class="circle-blue col-6">
			<div class="my-auto fw-bold fs-3">
				<p class="m-0">Find Hotail</p>
				<span>for your next trip</span>
				<p class="px-5 bg-white text-secondary fs-6 w-75">Discover homes</p>
			</div>
		</div>
		<div class="col-4">
			<img class="w-100" src="https://q-xx.bstatic.com/psb/capla/static/media/bh_aw_cpg_main_image.b4347622.png" alt="">
		</div>
	</div>
</main>